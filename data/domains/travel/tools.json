        "type": "array",
        "description": "List of available hotels",
        "items": {
          "type": "object",
          "properties": {
            "hotel_id": { "type": "string", "description": "Unique hotel identifier" },
            "name": { "type": "string" },
            "address": {
              "type": "object",
              "properties": {
                "street": { "type": "string" },
                "city": { "type": "string" },
                "state": { "type": "string" },
                "zip": { "type": "string" },
                "country": { "type": "string" }
              }
            },
            "rating": { "type": "number", "description": "Star rating (1-5)" },
            "price_per_night": { "type": "number" },
            "total_price": { "type": "number", "description": "Total for stay" },
            "currency": { "type": "string" },
            "amenities": {
              "type": "array",
              "items": { "type": "string" }
            },
            "room_types_available": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "max_occupancy": { "type": "integer" },
                  "beds": { "type": "string" }
                }
              }
            },
            "cancellation_policy": {
              "type": "object",
              "properties": {
                "free_cancellation": { "type": "boolean" },
                "cancellation_deadline": { "type": "string", "description": "Deadline for free cancellation" },
                "cancellation_fee": { "type": "number" }
              }
            },
            "images": {
              "type": "array",
              "items": { "type": "string", "description": "Image URLs" }
            }
          },
          "required": ["hotel_id", "name", "price_per_night", "total_price", "currency"]
        }
      }
    },
