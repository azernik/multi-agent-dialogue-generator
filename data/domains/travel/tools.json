{
  "id": "toolset.travel.v1",
  "tools": {
    "search_flights": {
      "description": "Search for available flights between origin and destination. Use when user wants to find flight options.",
      "parameters": {
        "origin": {
          "type": "string",
          "description": "Origin city or airport code (e.g., 'New York', 'NYC', 'JFK')",
          "required": true
        },
        "destination": {
          "type": "string",
          "description": "Destination city or airport code (e.g., 'Los Angeles', 'LAX')",
          "required": true
        },
        "departure_date": {
          "type": "string",
          "description": "Departure date (YYYY-MM-DD)",
          "required": true
        },
        "return_date": {
          "type": "string",
          "description": "Return date for round-trip flights (YYYY-MM-DD). Omit for one-way.",
          "required": false
        },
        "passengers": {
          "type": "object",
          "description": "Number of passengers",
          "required": false,
          "properties": {
            "adults": { "type": "integer", "default": 1 },
            "children": { "type": "integer", "default": 0 },
            "infants": { "type": "integer", "default": 0 }
          }
        },
        "class": {
          "type": "string",
          "description": "Cabin class preference: economy, premium_economy, business, first",
          "required": false,
          "enum": ["economy", "premium_economy", "business", "first"]
        },
        "flexible_dates": {
          "type": "boolean",
          "description": "If true, search Â±3 days around specified dates",
          "required": false,
          "default": false
        },
        "max_stops": {
          "type": "integer",
          "description": "Maximum number of stops (0 for non-stop, 1 for one stop, etc.)",
          "required": false
        },
        "preferred_airlines": {
          "type": "array",
          "description": "Preferred airline codes (e.g., ['AA', 'UA', 'DL'])",
          "required": false,
          "items": { "type": "string" }
        }
      },
      "returns": {
        "type": "array",
        "description": "List of available flight options",
        "items": {
          "type": "object",
          "properties": {
            "flight_id": { "type": "string", "description": "Unique flight identifier" },
            "airline": { "type": "string", "description": "Airline name" },
            "airline_code": { "type": "string", "description": "Airline code (e.g., 'AA', 'UA')" },
            "flight_number": { "type": "string", "description": "Flight number" },
            "departure": {
              "type": "object",
              "properties": {
                "airport": { "type": "string", "description": "Airport code" },
                "airport_name": { "type": "string", "description": "Full airport name" },
                "datetime": { "type": "string", "description": "ISO8601 datetime" },
                "terminal": { "type": "string" },
                "gate": { "type": "string" }
              },
              "required": ["airport", "datetime"]
            },
            "arrival": {
              "type": "object",
              "properties": {
                "airport": { "type": "string", "description": "Airport code" },
                "airport_name": { "type": "string", "description": "Full airport name" },
                "datetime": { "type": "string", "description": "ISO8601 datetime" },
                "terminal": { "type": "string" },
                "gate": { "type": "string" }
              },
              "required": ["airport", "datetime"]
            },
            "duration": { "type": "string", "description": "Flight duration (e.g., '5h 30m')" },
            "stops": { "type": "integer", "description": "Number of stops" },
            "stop_details": {
              "type": "array",
              "description": "Details about stops",
              "items": {
                "type": "object",
                "properties": {
                  "airport": { "type": "string" },
                  "duration": { "type": "string", "description": "Layover duration" }
                }
              }
            },
            "class": { "type": "string", "description": "Cabin class" },
            "price": { "type": "number", "description": "Price per passenger" },
            "currency": { "type": "string", "description": "Currency code (e.g., 'USD')" },
            "refundable": { "type": "boolean", "description": "Whether ticket is refundable" },
            "changeable": { "type": "boolean", "description": "Whether ticket can be changed" },
            "baggage_included": {
              "type": "object",
              "properties": {
                "carry_on": { "type": "boolean" },
                "checked": { "type": "integer", "description": "Number of checked bags included" }
              }
            },
            "seats_available": { "type": "integer", "description": "Remaining seats" }
          },
          "required": ["flight_id", "airline", "departure", "arrival", "price", "currency"]
        }
      }
    },
    "get_flight_details": {
      "description": "Get detailed information about a specific flight including seat map, amenities, and policies.",
      "parameters": {
        "flight_id": {
          "type": "string",
          "description": "Unique flight identifier",
          "required": true
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "flight_id": { "type": "string" },
          "airline": { "type": "string" },
          "flight_number": { "type": "string" },
          "departure": {
            "type": "object",
            "properties": {
              "airport": { "type": "string" },
              "airport_name": { "type": "string" },
              "datetime": { "type": "string" },
              "terminal": { "type": "string" },
              "gate": { "type": "string" }
            }
          },
          "arrival": {
            "type": "object",
            "properties": {
              "airport": { "type": "string" },
              "airport_name": { "type": "string" },
              "datetime": { "type": "string" },
              "terminal": { "type": "string" },
              "gate": { "type": "string" }
            }
          },
          "duration": { "type": "string" },
          "aircraft": { "type": "string", "description": "Aircraft type" },
          "amenities": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Available amenities (wifi, entertainment, meals, etc.)"
          },
          "baggage_policy": {
            "type": "object",
            "properties": {
              "carry_on": { "type": "boolean" },
              "checked_included": { "type": "integer" },
              "checked_fee": { "type": "number" },
              "weight_limit": { "type": "string" }
            }
          },
          "cancellation_policy": {
            "type": "object",
            "properties": {
              "refundable": { "type": "boolean" },
              "cancellation_fee": { "type": "number" },
              "refund_deadline": { "type": "string", "description": "Deadline for free cancellation" }
            }
          },
          "change_policy": {
            "type": "object",
            "properties": {
              "changeable": { "type": "boolean" },
              "change_fee": { "type": "number" },
              "fare_difference_applies": { "type": "boolean" }
            }
          }
        },
        "required": ["flight_id", "departure", "arrival"]
      }
    },
    "check_flight_availability": {
      "description": "Check if a specific flight and class is still available for booking.",
      "parameters": {
        "flight_id": {
          "type": "string",
          "description": "Unique flight identifier",
          "required": true
        },
        "class": {
          "type": "string",
          "description": "Cabin class",
          "required": true,
          "enum": ["economy", "premium_economy", "business", "first"]
        },
        "passengers": {
          "type": "object",
          "description": "Number of passengers",
          "required": false,
          "properties": {
            "adults": { "type": "integer", "default": 1 },
            "children": { "type": "integer", "default": 0 },
            "infants": { "type": "integer", "default": 0 }
          }
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "available": { "type": "boolean", "description": "Whether flight is available" },
          "seats_remaining": { "type": "integer", "description": "Number of seats available" },
          "price": { "type": "number", "description": "Current price per passenger" },
          "currency": { "type": "string" },
          "expires_at": { "type": "string", "description": "ISO8601 datetime when price expires" }
        },
        "required": ["available", "price", "currency"]
      }
    },
    "book_flight": {
      "description": "Create a flight booking. Requires flight selection and passenger information.",
      "parameters": {
        "flight_id": {
          "type": "string",
          "description": "Outbound flight identifier",
          "required": true
        },
        "return_flight_id": {
          "type": "string",
          "description": "Return flight identifier for round-trip bookings",
          "required": false
        },
        "passengers": {
          "type": "array",
          "description": "Passenger information",
          "required": true,
          "items": {
            "type": "object",
            "properties": {
              "first_name": { "type": "string", "required": true },
              "last_name": { "type": "string", "required": true },
              "date_of_birth": { "type": "string", "description": "YYYY-MM-DD", "required": true },
              "email": { "type": "string", "required": true },
              "phone": { "type": "string", "required": true },
              "passport_number": { "type": "string", "description": "Required for international flights" },
              "passport_expiry": { "type": "string", "description": "YYYY-MM-DD, required for international" },
              "frequent_flyer_number": { "type": "string" },
              "frequent_flyer_airline": { "type": "string" },
              "special_requests": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Special requests (wheelchair, meals, etc.)"
              }
            },
            "required": ["first_name", "last_name", "date_of_birth", "email", "phone"]
          }
        },
        "seat_preferences": {
          "type": "array",
          "description": "Seat preferences per passenger",
          "required": false,
          "items": {
            "type": "object",
            "properties": {
              "passenger_index": { "type": "integer" },
              "seat_preference": { "type": "string", "enum": ["window", "aisle", "middle"] },
              "seat_number": { "type": "string" }
            }
          }
        },
        "payment": {
          "type": "object",
          "description": "Payment information",
          "required": true,
          "properties": {
            "method": { "type": "string", "enum": ["credit_card", "debit_card", "paypal"] },
            "card_number": { "type": "string" },
            "card_expiry": { "type": "string", "description": "MM/YY" },
            "card_cvv": { "type": "string" },
            "billing_address": {
              "type": "object",
              "properties": {
                "street": { "type": "string" },
                "city": { "type": "string" },
                "state": { "type": "string" },
                "zip": { "type": "string" },
                "country": { "type": "string" }
              }
            }
          }
        },
        "special_requests": {
          "type": "array",
          "description": "Booking-level special requests",
          "required": false,
          "items": { "type": "string" }
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "booking_id": { "type": "string", "description": "Unique booking identifier" },
          "confirmation_code": { "type": "string", "description": "Booking confirmation code" },
          "itinerary": {
            "type": "object",
            "properties": {
              "outbound": {
                "type": "object",
                "properties": {
                  "flight_id": { "type": "string" },
                  "flight_number": { "type": "string" },
                  "departure": { "type": "object" },
                  "arrival": { "type": "object" }
                }
              },
              "return": {
                "type": "object",
                "properties": {
                  "flight_id": { "type": "string" },
                  "flight_number": { "type": "string" },
                  "departure": { "type": "object" },
                  "arrival": { "type": "object" }
                }
              }
            }
          },
          "passengers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "seat": { "type": "string" }
              }
            }
          },
          "total_price": { "type": "number" },
          "currency": { "type": "string" },
          "cancellation_policy": {
            "type": "object",
            "properties": {
              "refundable": { "type": "boolean" },
              "cancellation_fee": { "type": "number" },
              "free_cancellation_deadline": { "type": "string" }
            }
          },
          "change_policy": {
            "type": "object",
            "properties": {
              "changeable": { "type": "boolean" },
              "change_fee": { "type": "number" }
            }
          }
        },
        "required": ["booking_id", "confirmation_code", "total_price", "currency"]
      }
    },
    "search_hotels": {
      "description": "Search for available hotels in a location for specified dates.",
      "parameters": {
        "location": {
          "type": "string",
          "description": "City name, address, or area",
          "required": true
        },
        "check_in_date": {
          "type": "string",
          "description": "Check-in date (YYYY-MM-DD)",
          "required": true
        },
        "check_out_date": {
          "type": "string",
          "description": "Check-out date (YYYY-MM-DD)",
          "required": true
        },
        "guests": {
          "type": "object",
          "description": "Number of guests",
          "required": false,
          "properties": {
            "adults": { "type": "integer", "default": 2 },
            "children": { "type": "integer", "default": 0 }
          }
        },
        "rooms": {
          "type": "integer",
          "description": "Number of rooms needed",
          "required": false,
          "default": 1
        },
        "room_type": {
          "type": "string",
          "description": "Preferred room type (standard, deluxe, suite, etc.)",
          "required": false
        },
        "amenities": {
          "type": "array",
          "description": "Required amenities",
          "required": false,
          "items": {
            "type": "string",
            "enum": ["wifi", "pool", "gym", "spa", "parking", "breakfast", "pet_friendly", "air_conditioning"]
          }
        },
        "price_range": {
          "type": "object",
          "description": "Price range per night",
          "required": false,
          "properties": {
            "min": { "type": "number" },
