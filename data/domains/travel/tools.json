    "find_booking": {
      "description": "Locate a booking by confirmation code, booking ID, email, or other identifiers. Works for flights, hotels, and packages.",
      "parameters": {
        "confirmation_code": {
          "type": "string",
          "description": "Booking confirmation code",
          "required": false
        },
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": false
        },
        "email": {
          "type": "string",
          "description": "Email address used for booking",
          "required": false
        },
        "last_name": {
          "type": "string",
          "description": "Last name of primary passenger/guest",
          "required": false
        },
        "phone": {
          "type": "string",
          "description": "Phone number used for booking",
          "required": false
        }
      },
      "returns": {
        "type": "array",
        "description": "List of matching bookings",
        "items": {
          "type": "object",
          "properties": {
            "booking_id": { "type": "string" },
            "confirmation_code": { "type": "string" },
            "booking_type": {
              "type": "string",
              "enum": ["flight", "hotel", "package"],
              "description": "Type of booking"
            },
            "status": {
              "type": "string",
              "enum": ["confirmed", "pending", "cancelled", "completed"],
              "description": "Booking status"
            },
            "created_at": { "type": "string", "description": "ISO8601 datetime" },
            "primary_passenger": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "email": { "type": "string" }
              }
            },
            "summary": {
              "type": "object",
              "description": "Brief summary of booking",
              "properties": {
                "departure_date": { "type": "string", "description": "For flights" },
                "check_in_date": { "type": "string", "description": "For hotels" },
                "destination": { "type": "string" },
                "total_price": { "type": "number" },
                "currency": { "type": "string" }
              }
            }
          },
          "required": ["booking_id", "confirmation_code", "booking_type", "status"]
        }
      }
    },
    "get_booking_details": {
      "description": "Get full details of a booking including itinerary, passengers/guests, payment, and policies. Works for flights, hotels, and packages.",
      "parameters": {
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": true
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "booking_id": { "type": "string" },
          "confirmation_code": { "type": "string" },
          "booking_type": {
            "type": "string",
            "enum": ["flight", "hotel", "package"]
          },
          "status": { "type": "string" },
          "created_at": { "type": "string" },
          "flight_details": {
            "type": "object",
            "description": "Present if booking_type is 'flight'",
            "properties": {
              "outbound": { "type": "object" },
              "return": { "type": "object" },
              "passengers": { "type": "array" }
            }
          },
          "hotel_details": {
            "type": "object",
            "description": "Present if booking_type is 'hotel'",
            "properties": {
              "hotel": { "type": "object" },
              "check_in": { "type": "object" },
              "check_out": { "type": "object" },
              "guests": { "type": "array" },
              "room_type": { "type": "string" }
            }
          },
          "payment": {
            "type": "object",
            "properties": {
              "total": { "type": "number" },
              "currency": { "type": "string" },
              "method": { "type": "string" }
            }
          },
          "cancellation_policy": { "type": "object" },
          "change_policy": { "type": "object" },
          "changeable": { "type": "boolean" },
          "cancelable": { "type": "boolean" }
        },
        "required": ["booking_id", "confirmation_code", "booking_type", "status"]
      }
    },
    "get_change_options": {
      "description": "Check what changes can be made to a booking and associated fees. Primarily for flight bookings.",
      "parameters": {
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": true
        },
        "change_type": {
          "type": "string",
          "description": "Type of change requested",
          "required": false,
          "enum": ["dates", "times", "class", "route", "passengers"]
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "changeable": { "type": "boolean", "description": "Whether booking can be changed" },
          "change_fee": { "type": "number", "description": "Fee for making changes" },
          "fare_difference_applies": { "type": "boolean", "description": "Whether fare difference will be charged" },
          "available_alternatives": {
            "type": "array",
            "description": "Available alternative flights/options",
            "items": { "type": "object" }
          },
          "deadline": {
            "type": "string",
            "description": "Deadline for making changes (ISO8601 datetime)"
          },
          "notes": { "type": "string", "description": "Additional information about change policy" }
        },
        "required": ["changeable", "change_fee"]
      }
    },
    "change_flight": {
      "description": "Execute a change to a flight booking (dates, times, class, or route).",
      "parameters": {
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": true
        },
        "new_flight_id": {
          "type": "string",
          "description": "New flight identifier (for route/time changes)",
          "required": false
        },
        "new_return_flight_id": {
          "type": "string",
          "description": "New return flight identifier (for round-trip changes)",
          "required": false
        },
        "change_type": {
          "type": "string",
          "enum": ["dates", "times", "class", "route"],
          "required": true
        },
        "new_class": {
          "type": "string",
          "description": "New cabin class (if changing class)",
          "required": false,
          "enum": ["economy", "premium_economy", "business", "first"]
        },
        "passengers_affected": {
          "type": "array",
          "description": "Indices of passengers affected by change",
          "required": false,
          "items": { "type": "integer" }
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "new_booking_id": { "type": "string", "description": "New booking ID (may be same as original)" },
          "confirmation_code": { "type": "string" },
          "change_fee": { "type": "number" },
          "fare_difference": { "type": "number", "description": "Additional cost (positive) or refund (negative)" },
          "new_itinerary": {
            "type": "object",
            "properties": {
              "outbound": { "type": "object" },
              "return": { "type": "object" }
            }
          },
          "refund_amount": {
            "type": "number",
            "description": "If fare difference is negative, amount to be refunded"
          }
        },
        "required": ["new_booking_id", "confirmation_code", "change_fee"]
      }
    },
    "get_cancellation_options": {
      "description": "Check cancellation policy and refund amount for a booking. Works for flights, hotels, and packages.",
      "parameters": {
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": true
        },
        "booking_type": {
          "type": "string",
          "description": "Type of booking (inferred if not provided)",
          "required": false,
          "enum": ["flight", "hotel", "package"]
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "cancelable": { "type": "boolean", "description": "Whether booking can be cancelled" },
          "cancellation_fee": { "type": "number", "description": "Fee for cancellation" },
          "refund_amount": {
            "type": "number",
            "description": "Amount to be refunded (after fees)"
          },
          "refund_method": {
            "type": "string",
            "enum": ["original_payment", "travel_credit", "voucher"],
            "description": "How refund will be processed"
          },
          "refund_timeline": {
            "type": "string",
            "description": "Expected time to receive refund (e.g., '7-10 business days')"
          },
          "cancellation_deadline": {
            "type": "string",
            "description": "Deadline for free cancellation (ISO8601 datetime)"
          },
          "notes": { "type": "string", "description": "Additional cancellation policy information" }
        },
        "required": ["cancelable", "cancellation_fee", "refund_amount"]
      }
    },
    "cancel_booking": {
      "description": "Cancel a booking (flight, hotel, or package). Returns cancellation confirmation and refund details.",
      "parameters": {
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": true
        },
        "reason": {
          "type": "string",
          "description": "Reason for cancellation (optional)",
          "required": false
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "cancellation_confirmed": { "type": "boolean" },
          "cancellation_id": { "type": "string", "description": "Unique cancellation identifier" },
          "refund_amount": { "type": "number" },
          "refund_timeline": { "type": "string" },
          "cancellation_fee": { "type": "number" },
          "refund_method": { "type": "string" }
        },
        "required": ["cancellation_confirmed", "cancellation_id", "refund_amount"]
      }
    },
    "get_flight_status": {
      "description": "Get real-time status of a flight including delays, gate changes, and arrival times.",
      "parameters": {
        "flight_number": {
          "type": "string",
          "description": "Flight number (e.g., 'AA123')",
          "required": true
        },
        "date": {
          "type": "string",
          "description": "Flight date (YYYY-MM-DD)",
          "required": true
        },
        "departure_airport": {
          "type": "string",
          "description": "Departure airport code (optional, helps disambiguate)",
          "required": false
        },
        "arrival_airport": {
          "type": "string",
          "description": "Arrival airport code (optional, helps disambiguate)",
          "required": false
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "flight_number": { "type": "string" },
          "airline": { "type": "string" },
          "date": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["on_time", "delayed", "cancelled", "boarding", "departed", "arrived"],
            "description": "Current flight status"
          },
          "scheduled_departure": { "type": "string", "description": "ISO8601 datetime" },
          "actual_departure": { "type": "string", "description": "ISO8601 datetime, if departed" },
          "scheduled_arrival": { "type": "string", "description": "ISO8601 datetime" },
          "actual_arrival": { "type": "string", "description": "ISO8601 datetime, if arrived" },
          "departure_gate": { "type": "string" },
          "departure_terminal": { "type": "string" },
          "arrival_gate": { "type": "string" },
          "arrival_terminal": { "type": "string" },
          "delay_reason": { "type": "string", "description": "Reason for delay if delayed" },
          "delay_minutes": { "type": "integer", "description": "Delay in minutes" }
        },
        "required": ["flight_number", "date", "status"]
      }
    },
    "get_booking_status": {
      "description": "Get current status of a booking including check-in status, seat assignments, and flight status.",
      "parameters": {
        "booking_id": {
          "type": "string",
          "description": "Unique booking identifier",
          "required": true
        }
      },
      "returns": {
        "type": "object",
        "properties": {
          "booking_id": { "type": "string" },
          "booking_status": {
            "type": "string",
            "enum": ["confirmed", "checked_in", "boarded", "completed", "cancelled"],
            "description": "Overall booking status"
          },
          "flight_status": {
            "type": "object",
            "description": "Flight status information",
            "properties": {
              "outbound": { "type": "object" },
              "return": { "type": "object" }
            }
          },
          "check_in_status": {
            "type": "object",
            "properties": {
              "checked_in": { "type": "boolean" },
              "check_in_deadline": { "type": "string", "description": "ISO8601 datetime" },
              "online_check_in_available": { "type": "boolean" }
            }
          },
          "seat_assignments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "passenger_name": { "type": "string" },
                "flight": { "type": "string", "description": "Flight number" },
                "seat": { "type": "string" }
              }
            }
          }
        },
        "required": ["booking_id", "booking_status"]
      }
    }
  }
}

