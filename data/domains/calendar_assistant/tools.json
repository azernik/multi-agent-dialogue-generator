{
  "id": "toolset.calendar.v1",
  "tools": {
    "search_events": {
      "description": "Search for calendar events by various criteria",
      "parameters": {
        "query": { "type": "string", "description": "Search query for event title/description", "required": false },
        "start_date": { "type": "string", "description": "Start of date range (e.g., '2025-01-15')", "required": false },
        "end_date": { "type": "string", "description": "End of date range", "required": false },
        "attendee_emails": { "type": "array", "description": "Filter by attendee emails", "required": false },
        "event_id": { "type": "string", "description": "Specific event ID to retrieve", "required": false }
      },
      "returns": {
        "type": "array",
        "description": "List of matching calendar events",
        "items": {
          "type": "object",
          "properties": {
            "event_id": { "type": "string", "description": "Unique event identifier" },
            "title": { "type": "string", "description": "Event title" },
            "start_time": { "type": "string", "description": "Start time in ISO format" },
            "end_time": { "type": "string", "description": "End time in ISO format" },
            "attendees": { "type": "array", "description": "List of attendee emails" },
            "location": { "type": "string", "description": "Event location" },
            "description": { "type": "string", "description": "Event description" },
            "is_recurring": { "type": "boolean", "description": "Whether event is part of a series" },
            "recurrence_id": { "type": "string", "description": "ID of recurring series" }
          }
        }
      }
    },
    "find_available_slots": {
      "description": "Find available time slots for one or more people",
      "parameters": {
        "attendee_emails": { "type": "array", "description": "List of attendee emails", "required": true },
        "date_range_start": { "type": "string", "description": "Start date for availability search", "required": true },
        "date_range_end": { "type": "string", "description": "End date for availability search", "required": true },
        "duration_minutes": { "type": "integer", "description": "Required duration in minutes", "required": true },
        "preferred_times": { "type": "string", "description": "Preferred time window (e.g., '09:00-17:00')", "required": false },
        "minimum_slots": { "type": "integer", "description": "Minimum number of slots to return", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "available_slots": {
            "type": "array",
            "description": "List of available time slots",
            "items": {
              "type": "object",
              "properties": {
                "start": { "type": "string", "description": "Slot start time" },
                "end": { "type": "string", "description": "Slot end time" },
                "all_available": { "type": "boolean", "description": "Whether all attendees are available" },
                "available_attendees": { "type": "array", "description": "List of available attendees" }
              }
            }
          }
        }
      }
    },
    "search_contacts": {
      "description": "Search for people in the organization directory",
      "parameters": {
        "name": { "type": "string", "description": "Person's name", "required": false },
        "email": { "type": "string", "description": "Email address", "required": false },
        "department": { "type": "string", "description": "Department name", "required": false }
      },
      "returns": {
        "type": "array",
        "description": "List of matching contacts",
        "items": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "description": "Email address" },
            "name": { "type": "string", "description": "Full name" },
            "department": { "type": "string", "description": "Department" },
            "title": { "type": "string", "description": "Job title" },
            "calendar_visible": { "type": "boolean", "description": "Whether calendar is visible" }
          }
        }
      }
    },
    "check_conflicts": {
      "description": "Check if a proposed time conflicts with existing events",
      "parameters": {
        "attendee_emails": { "type": "array", "description": "List of attendee emails", "required": true },
        "start_time": { "type": "string", "description": "Proposed start time", "required": true },
        "end_time": { "type": "string", "description": "Proposed end time", "required": true },
        "exclude_event_id": { "type": "string", "description": "Event ID to exclude (for rescheduling)", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "has_conflicts": { "type": "boolean", "description": "Whether conflicts exist" },
          "conflicting_events": { 
            "type": "array", 
            "description": "List of conflicting events",
            "items": {
              "type": "object",
              "properties": {
                "event_id": { "type": "string" },
                "title": { "type": "string" },
                "start_time": { "type": "string" },
                "end_time": { "type": "string" }
              }
            }
          },
          "conflicted_attendees": { 
            "type": "array", 
            "description": "List of attendees with conflicts",
            "items": { "type": "string" }
          }
        }
      }
    },
    "check_room_availability": {
      "description": "Check if a meeting room is available",
      "parameters": {
        "room_id": { "type": "string", "description": "Room identifier", "required": true },
        "start_time": { "type": "string", "description": "Start time", "required": true },
        "end_time": { "type": "string", "description": "End time", "required": true }
      },
      "returns": {
        "type": "object",
        "properties": {
          "is_available": { "type": "boolean", "description": "Whether room is available" },
          "existing_bookings": { 
            "type": "array",
            "description": "Existing bookings in that time slot",
            "items": {
              "type": "object",
              "properties": {
                "event_id": { "type": "string" },
                "title": { "type": "string" },
                "start_time": { "type": "string" },
                "end_time": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "get_weather_forecast": {
      "description": "Get weather forecast for outdoor event planning",
      "parameters": {
        "location": { "type": "string", "description": "City or address", "required": true },
        "date": { "type": "string", "description": "Date for forecast (YYYY-MM-DD)", "required": true }
      },
      "returns": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "description": "Forecast date" },
          "temperature_high": { "type": "number", "description": "High temperature in Fahrenheit" },
          "temperature_low": { "type": "number", "description": "Low temperature in Fahrenheit" },
          "precipitation_chance": { "type": "number", "description": "Chance of precipitation (0-100)" },
          "conditions": { "type": "string", "description": "Weather conditions (e.g., 'Sunny', 'Cloudy', 'Rainy')" },
          "wind_speed": { "type": "number", "description": "Wind speed in mph" }
        }
      }
    },
    "create_event": {
      "description": "Create a new calendar event",
      "parameters": {
        "title": { "type": "string", "description": "Event title", "required": true },
        "start_time": { "type": "string", "description": "Start time (ISO format)", "required": true },
        "end_time": { "type": "string", "description": "End time (ISO format)", "required": true },
        "attendee_emails": { "type": "array", "description": "List of attendee emails", "required": false },
        "location": { "type": "string", "description": "Event location", "required": false },
        "description": { "type": "string", "description": "Event description", "required": false },
        "send_invitations": { "type": "boolean", "description": "Send invites to attendees", "required": false },
        "reminder_minutes": { "type": "integer", "description": "Reminder time before event", "required": false },
        "is_outdoor": { "type": "boolean", "description": "Mark as outdoor event", "required": false },
        "backup_location": { "type": "string", "description": "Backup location for outdoor events", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "event_id": { "type": "string", "description": "Created event ID" },
          "success": { "type": "boolean", "description": "Whether creation succeeded" },
          "invitation_status": { 
            "type": "object",
            "description": "Status of sent invitations",
            "properties": {
              "sent": { "type": "array", "items": { "type": "string" } },
              "failed": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    },
    "create_recurring_event": {
      "description": "Create a recurring calendar event series",
      "parameters": {
        "title": { "type": "string", "description": "Event title", "required": true },
        "start_time": { "type": "string", "description": "First occurrence start time", "required": true },
        "duration_minutes": { "type": "integer", "description": "Duration of each event", "required": true },
        "recurrence_pattern": { "type": "string", "description": "Pattern: daily, weekly, biweekly, monthly", "required": true },
        "recurrence_count": { "type": "integer", "description": "Number of occurrences", "required": false },
        "recurrence_end_date": { "type": "string", "description": "End date for series", "required": false },
        "attendee_emails": { "type": "array", "description": "List of attendee emails", "required": false },
        "skip_dates": { "type": "array", "description": "Dates to skip in series", "required": false },
        "location": { "type": "string", "description": "Event location", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "series_id": { "type": "string", "description": "Recurring series ID" },
          "created_events": { 
            "type": "array",
            "description": "List of created event instances",
            "items": {
              "type": "object",
              "properties": {
                "event_id": { "type": "string" },
                "start_time": { "type": "string" },
                "end_time": { "type": "string" }
              }
            }
          },
          "skipped_dates": { 
            "type": "array",
            "description": "Dates that were skipped",
            "items": { "type": "string" }
          }
        }
      }
    },
    "update_event": {
      "description": "Update an existing calendar event",
      "parameters": {
        "event_id": { "type": "string", "description": "Event ID to update", "required": true },
        "title": { "type": "string", "description": "New title", "required": false },
        "start_time": { "type": "string", "description": "New start time", "required": false },
        "end_time": { "type": "string", "description": "New end time", "required": false },
        "location": { "type": "string", "description": "New location", "required": false },
        "description": { "type": "string", "description": "New description", "required": false },
        "attendee_emails": { "type": "array", "description": "Updated attendee list", "required": false },
        "send_update": { "type": "boolean", "description": "Notify attendees of changes", "required": false },
        "update_message": { "type": "string", "description": "Custom message about the update", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "description": "Whether update succeeded" },
          "notifications_sent": { 
            "type": "array",
            "description": "List of notified attendees",
            "items": { "type": "string" }
          }
        }
      }
    },
    "cancel_event": {
      "description": "Cancel a calendar event",
      "parameters": {
        "event_id": { "type": "string", "description": "Event ID to cancel", "required": true },
        "cancellation_reason": { "type": "string", "description": "Reason for cancellation", "required": false },
        "notify_attendees": { "type": "boolean", "description": "Send cancellation notices", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "description": "Whether cancellation succeeded" },
          "notifications_sent": { "type": "integer", "description": "Number of notifications sent" }
        }
      }
    },
    "send_invitation": {
      "description": "Send or resend meeting invitations",
      "parameters": {
        "event_id": { "type": "string", "description": "Event ID", "required": true },
        "attendee_emails": { "type": "array", "description": "Specific attendees to invite", "required": false },
        "message": { "type": "string", "description": "Custom invitation message", "required": false }
      },
      "returns": {
        "type": "object",
        "properties": {
          "sent": { 
            "type": "array",
            "description": "Successfully sent invitations",
            "items": { "type": "string" }
          },
          "failed": { 
            "type": "array",
            "description": "Failed invitations",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}