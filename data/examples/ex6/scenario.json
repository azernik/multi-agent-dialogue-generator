{
    "tools": {
      "search_flights": {
        "description": "Search for flights between two cities on a given date",
        "parameters": {
          "from_city": {
            "type": "string",
            "description": "Departure city",
            "required": true
          },
          "to_city": {
            "type": "string",
            "description": "Arrival city",
            "required": true
          },
          "date": {
            "type": "string",
            "description": "Date of travel",
            "required": true
          }
        },
        "returns": {
          "type": "array",
          "description": "List of available flights",
          "items": {
            "type": "object",
            "properties": {
              "flight_id": {
                "type": "string",
                "description": "Flight identifier"
              },
              "airline": {
                "type": "string",
                "description": "Airline name"
              },
              "departure_time": {
                "type": "string",
                "description": "Departure time"
              },
              "arrival_time": {
                "type": "string",
                "description": "Arrival time"
              },
              "price": {
                "type": "string",
                "description": "Ticket price"
              }
            },
            "required": ["flight_id", "airline", "departure_time", "arrival_time", "price"]
          }
        }
      },
      "book_flight": {
        "description": "Book a selected flight",
        "parameters": {
          "flight_id": {
            "type": "string",
            "description": "Flight identifier to be booked",
            "required": true
          },
          "passenger_name": {
            "type": "string",
            "description": "Passenger's full name",
            "required": true
          },
          "email": {
            "type": "string",
            "description": "Passenger's email address",
            "required": true
          }
        },
        "returns": {
          "type": "object",
          "properties": {
            "success": {
              "type": "boolean",
              "description": "True if booking succeeded"
            },
            "booking_reference": {
              "type": "string",
              "description": "Booking reference number (if successful)"
            }
          },
          "required": ["success"]
        }
      }
    },
    "user_context": {
      "objective": "Find a flight to New York for next Friday from San Francisco",
      "behavior": "User is polite, cooperative, answers questions clearly, but changes the destination city to Chicago just before booking"
    }
  }